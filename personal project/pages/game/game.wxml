<!--pages/game/game.wxml-->
<view class="container">
  <!-- 顶部用户信息区域 -->
  <view class="user-info-section">
    <image class="user-avatar" src="{{userInfo.avatarUrl || '/images/default-avatar.svg'}}" mode="aspectFill"></image>
    <view class="user-details">
      <text class="user-nickname">{{userInfo.nickName || '玩家'}}</text>
      <text class="user-major">{{characterInfo.majorName}}</text>
    </view>
  </view>

  <!-- 主要内容区域 -->
  <view class="main-content">


    <!-- 上方游戏数值区域 -->
    <view class="top-panel">
      <view class="values-section">
        <view class="values-list">
          <view class="value-item health">
            <text class="value-name">健康</text>
            <view class="value-bar">
              <view class="value-fill" style="width: {{gameValues.health}}%"></view>
            </view>
            <text class="value-number">{{gameValues.health}}</text>
          </view>
          
          <view class="value-item happiness">
            <text class="value-name">快乐</text>
            <view class="value-bar">
              <view class="value-fill" style="width: {{gameValues.happiness}}%"></view>
            </view>
            <text class="value-number">{{gameValues.happiness}}</text>
          </view>
          
          <view class="value-item intelligence">
            <text class="value-name">智力</text>
            <view class="value-bar">
              <view class="value-fill" style="width: {{gameValues.intelligence}}%"></view>
            </view>
            <text class="value-number">{{gameValues.intelligence}}</text>
          </view>
          
          <view class="value-item wealth">
            <text class="value-name">财富</text>
            <view class="value-bar">
              <view class="value-fill" style="width: {{gameValues.wealth}}%"></view>
            </view>
            <text class="value-number">{{gameValues.wealth}}</text>
          </view>
          
          <view class="value-item social">
            <text class="value-name">社交</text>
            <view class="value-bar">
              <view class="value-fill" style="width: {{gameValues.social}}%"></view>
            </view>
            <text class="value-number">{{gameValues.social}}</text>
          </view>
        </view>
      </view>
    </view>

    <!-- 下方事件区域 -->
    <view class="bottom-panel">
      <view class="event-section">
        <view class="event-header">
          <text class="event-title {{gameEnded ? 'game-end-title' : ''}}">{{currentEvent.title}}</text>
        </view>
        <view class="event-content">
          <text class="event-description">{{currentEvent.description}}</text>
          <button class="start-journey-btn" bindtap="startJourney" wx:if="{{!journeyStarted}}">
            <text class="btn-text">开始旅程</text>
          </button>
          
          <!-- 选择按钮 -->
          <view class="choices-section" wx:if="{{journeyStarted && currentEvent.choices}}">
            <view class="choice-item" wx:for="{{currentEvent.choices}}" wx:key="index" bindtap="makeChoice" data-index="{{index}}">
              <text class="choice-text">{{item.text}}</text>
            </view>
          </view>
          
          <!-- 继续按钮 - 只在游戏未结束时显示 -->
          <view class="continue-btn" wx:if="{{journeyStarted && !currentEvent.choices && !gameEnded}}" bindtap="nextEvent">
            <text class="btn-text">继续</text>
          </view>
          
          <!-- 游戏结束提示 -->
          <view class="game-end-tip" wx:if="{{gameEnded}}">
            <text class="end-tip-text">游戏已结束，可以返回主页查看历史记录</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>