/* pages/game/game.wxss */



.container {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--retro-blue) 0%, var(--retro-blue-light) 100%);
  display: flex;
  flex-direction: column;
}

/* 顶部用户信息区域 */
.user-info-section {
  background: linear-gradient(135deg, var(--retro-blue) 0%, var(--retro-blue-light) 100%);
  padding: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(135, 206, 235, 0.3);
  gap: 30rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-details {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.user-nickname {
  font-size: 40rpx;
  font-weight: normal;
  color: white;
}

.user-major {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  gap: 30rpx;
}

/* 上方数值区域 */
.top-panel {
  width: 100%;
}

/* 下方事件区域 */
.bottom-panel {
  width: 100%;
}

.event-section {
  background: var(--white-soft);
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.event-header {
  margin-bottom: 30rpx;
}

.event-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.event-title {
  display: block;
  font-size: 40rpx;
  font-weight: normal;
  color: #333;
}

.game-end-title {
  font-size: 56rpx;
  color: #8A2BE2;
  font-weight: bold;
}

.event-content {
  margin-top: 30rpx;
}

.event-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: center;
  margin-bottom: 30rpx;
}

.start-journey-btn {
  background: linear-gradient(135deg, var(--retro-blue) 0%, var(--retro-blue-light) 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  margin-top: 30rpx;
  box-shadow: 0 6rpx 15rpx rgba(135, 206, 235, 0.3);
  transition: all 0.3s ease;
}

.start-journey-btn:active {
  transform: scale(0.95);
}

.start-journey-btn .btn-text {
  font-size: 32rpx;
  font-weight: normal;
}

.choices-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 30rpx;
  width: 100%;
}

.choice-item {
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx solid #e0e0e0;
  border-radius: 25rpx;
  padding: 25rpx 30rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.choice-item:hover {
  background: rgba(102, 126, 234, 0.1);
  border-color: #667eea;
  transform: translateY(-2rpx);
}

.choice-item:active {
  transform: scale(0.98);
}

.choice-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  text-align: center;
  display: block;
}

.continue-btn {
  background: linear-gradient(45deg, #74b9ff, #0984e3);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  margin-top: 30rpx;
  box-shadow: 0 6rpx 15rpx rgba(116, 185, 255, 0.3);
  transition: all 0.3s ease;
}

.continue-btn:active {
  transform: scale(0.95);
}

.continue-btn .btn-text {
  font-size: 32rpx;
  font-weight: normal;
}

/* 游戏结束提示样式 */
.game-end-tip {
  text-align: center;
  padding: 40rpx 30rpx;
  margin-top: 30rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  border: 2px dashed rgba(255, 255, 255, 0.3);
}

.end-tip-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

.values-section {
  background: var(--white-soft);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.values-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 25rpx;
}

.value-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.value-icon {
  font-size: 32rpx;
  width: 40rpx;
  text-align: center;
}

.value-name {
  font-size: 26rpx;
  font-weight: normal;
  color: #333;
  width: 60rpx;
}

.value-bar {
  flex: 1;
  height: 16rpx;
  background: #e9ecef;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}

.value-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.5s ease;
}

.health .value-fill {
  background: linear-gradient(90deg, #e17055 0%, #fd79a8 100%);
}

.happiness .value-fill {
  background: linear-gradient(90deg, #fdcb6e 0%, #e17055 100%);
}

.intelligence .value-fill {
  background: linear-gradient(90deg, #74b9ff 0%, #0984e3 100%);
}

.wealth .value-fill {
  background: linear-gradient(90deg, #00b894 0%, #00cec9 100%);
}

.social .value-fill {
  background: linear-gradient(90deg, #a29bfe 0%, #6c5ce7 100%);
}

.value-number {
  font-size: 24rpx;
  font-weight: normal;
  color: #333;
  width: 50rpx;
  text-align: right;
}

/* 底部进度条样式 */
.progress-section {
  background: var(--white-soft);
  padding: 30rpx;
  margin: 20rpx 30rpx 30rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.progress-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.progress-title {
  font-size: 28rpx;
  font-weight: normal;
  color: var(--text-primary);
  text-align: center;
}

.progress-bar {
  height: 12rpx;
  background: #e9ecef;
  border-radius: 6rpx;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--retro-blue) 0%, var(--retro-blue-light) 100%);
  border-radius: 6rpx;
  transition: width 0.5s ease;
}

.progress-labels {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.progress-label {
  font-size: 24rpx;
  color: var(--text-light);
  transition: all 0.3s ease;
}

.progress-label.active {
  color: var(--retro-blue);
  font-weight: 500;
}

.current-grade {
  text-align: center;
  margin-top: 15rpx;
}

.grade-text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

/* 响应式设计 */
@media (max-width: 750px) {
  .values-list {
    grid-template-columns: 1fr;
    gap: 20rpx;
  }
}