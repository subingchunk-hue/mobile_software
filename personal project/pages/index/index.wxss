/* index.wxss */
.page {
  height: 100vh;
  background: linear-gradient(135deg, var(--retro-blue) 0%, var(--retro-blue-light) 100%);
  display: flex;
  flex-direction: column;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  padding: 40rpx;
  padding-bottom: 140rpx; /* 为底部 Tab 留出空间 */
  overflow: hidden;
}

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, rgb(245, 247, 250) 0%, rgb(195, 207, 226) 100%);
  padding: 20rpx;
  padding-bottom: 140rpx; /* 为底部Tab导航留出空间 */
}

.tab-content {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 游戏页面样式 */

/* 主页配图 */
.hero-image {
  width: calc(100% + 80rpx);
  height: 400rpx;
  margin: -40rpx -40rpx 40rpx -40rpx;
}

.hero-img {
  width: 100%;
  height: 100%;
  border-radius: 0;
  object-fit: cover;
}

/* 小黑板样式 */
.blackboard {
  width: 90%;
  max-width: 600rpx;
  margin: 30rpx auto 40rpx auto;
  padding: 30rpx 40rpx;
  background: rgb(45, 45, 45);
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgb(0, 0, 0, 0.3);
  border: 6rpx solid rgb(101, 67, 33);
  position: relative;
}

.blackboard::before {
  content: '';
  position: absolute;
  top: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 20rpx;
  background: rgb(101, 67, 33);
  border-radius: 10rpx;
}

.blackboard-text {
  color: rgb(255, 255, 255);
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  display: block;
  letter-spacing: 2rpx;
}

.game-actions {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  padding: 0 40rpx 40rpx 40rpx;
  align-items: center;
  margin-top: 20rpx;
}

.game-btn {
  width: 100%;
  max-width: 500rpx;
  padding: 24rpx 48rpx;
  background: var(--warm-bg);
  color: var(--dark-brown);
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  box-shadow: 0 8rpx 20rpx rgb(101, 67, 33, 0.3);
  transition: all 0.3s ease;
}

.game-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 10rpx rgb(139, 69, 19, 0.3);
}



/* 历史页面样式 */
.history-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 40rpx 20rpx;
  background: rgb(173, 216, 230, 0.3);
}

/* 顶部标题 */
.history-header {
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.history-title-btn {
  background: rgb(255, 248, 225, 0.8);
  border-radius: 20rpx;
  padding: 24rpx 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: none;
  box-shadow: 0 4rpx 16rpx rgb(139, 69, 19, 0.15);
  transition: all 0.3s ease;
}

.history-title-btn::after {
  border: none;
}

.history-title-btn:active {
  background: rgb(255, 248, 225, 0.9);
  transform: scale(0.95);
}

.history-title-text {
  font-size: 36rpx;
  font-weight: normal;
  color: var(--text-primary);
}

/* 中间内容区域 */
.history-content {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.history-box {
  width: 90%;
  max-width: 600rpx;
  height: calc(100vh - 300rpx);
  max-height: 1000rpx;
  margin: 0 auto;
  background: rgb(248, 248, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgb(139, 69, 19, 0.15);
  border: 2rpx solid rgba(139, 69, 19, 0.2);
  overflow: hidden;
}

.history-scroll {
  width: 100%;
  height: 100%;
  padding: 15rpx;
  box-sizing: border-box;
}

/* 空状态 */
.history-empty {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.history-empty .empty-text {
    font-size: 28rpx;
    color: var(--text-light);
    margin-bottom: 16rpx;
  }

  .history-empty .empty-tip {
      font-size: 24rpx;
      color: var(--text-light);
    }

  /* 历史项目 */
  .history-item {
    background: rgb(255, 255, 255, 0.9);
    border-radius: 16rpx;
    padding: 20rpx;
    margin-bottom: 16rpx;
    box-shadow: 0 4rpx 16rpx rgb(139, 69, 19, 0.1);
    text-align: left;
    width: 100%;
    box-sizing: border-box;
  }

  .history-header-item {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .player-info {
    flex: 1;
  }

  .player-name {
    font-size: 28rpx;
    font-weight: 600;
    color: var(--text-primary);
    display: block;
    margin-bottom: 8rpx;
  }

  .character-detail {
    font-size: 22rpx;
    color: var(--text-secondary);
    display: block;
    margin-bottom: 8rpx;
  }

  .achievements {
    margin-top: 8rpx;
  }

  .achievements-text {
    font-size: 20rpx;
    color: rgb(255, 140, 0);
    font-weight: 500;
  }

  .completion-time {
    font-size: 20rpx;
    color: var(--text-light);
    text-align: right;
  }

  .game-summary {
    background: rgb(255, 248, 225, 0.7);
    border-radius: 12rpx;
    padding: 16rpx;
  }

  .stats-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 12rpx;
    flex-wrap: wrap;
    gap: 8rpx;
  }

  .stat-item {
    font-size: 20rpx;
    color: rgb(51, 51, 51);
    background: rgb(255, 255, 255, 0.8);
    padding: 6rpx 10rpx;
    border-radius: 8rpx;
  }



/* 底部Tab导航样式 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: rgb(255, 248, 225, 0.95);
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-top: 2rpx solid rgb(139, 69, 19, 0.1);
  backdrop-filter: blur(10rpx);
  z-index: 1000;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: var(--primary-brown);
}

.tab-item.active .tab-icon {
  transform: scale(1.1);
}

.tab-text {
  font-size: 40rpx;
  color: var(--text-secondary);
  transition: all 0.3s ease;
}

.tab-item.active .tab-text {
  color: var(--primary-brown);
  font-weight: 600;
}

.total-score {
  font-size: 26rpx;
  font-weight: normal;
  color: rgb(76, 175, 80);
}

/* 个人信息页面样式 */
.profile-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.profile-section {
  padding: 40rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 未登录状态样式 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding: 80rpx 0;
}

.login-avatar {
  margin-bottom: 40rpx;
}

.avatar-placeholder {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  opacity: 0.6;
}

.login-tip {
  font-size: 32rpx;
  color: rgb(102, 102, 102);
  margin-bottom: 60rpx;
}

.login-btn {
  background: linear-gradient(135deg, rgb(7, 193, 96), rgb(0, 174, 71));
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 20rpx rgb(7, 193, 96, 0.3);
}

.login-btn::after {
  border: none;
}

.login-icon {
  margin-right: 16rpx;
  font-size: 36rpx;
}

.login-text {
  font-weight: 500;
}

/* 已登录状态样式 */
.user-profile {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-header {
  margin-bottom: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  border: 6rpx solid rgb(240, 240, 240);
  box-shadow: 0 8rpx 20rpx rgb(0, 0, 0, 0.1);
  cursor: pointer;
  transition: transform 0.2s ease;
}

.user-avatar:active {
  transform: scale(0.95);
}

.avatar-edit-tip {
  font-size: 24rpx;
  color: rgb(153, 153, 153);
  margin-top: 16rpx;
}

.user-details {
  width: 100%;
  background: rgb(248, 249, 250);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 60rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgb(238, 238, 238);
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  width: 60rpx;
  text-align: center;
}

.detail-label {
  font-size: 32rpx;
  color: rgb(51, 51, 51);
  margin-right: 40rpx;
  min-width: 80rpx;
}

.detail-value {
  font-size: 32rpx;
  color: rgb(102, 102, 102);
  flex: 1;
}

.detail-arrow {
  font-size: 28rpx;
  color: #ccc;
  margin-left: 20rpx;
}

.detail-item {
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.detail-item:active {
  background-color: rgb(0, 0, 0, 0.05);
  border-radius: 10rpx;
}

.logout-btn {
  background: rgb(255, 71, 87);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 50rpx;
  font-size: 28rpx;
  box-shadow: 0 6rpx 15rpx rgb(255, 71, 87, 0.3);
}

.logout-btn::after {
  border: none;
}

.logout-text {
  font-weight: 500;
}

/* 相册集和关于按钮样式 */
.action-buttons {
  width: 100%;
  display: flex;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.action-btn {
  flex: 1;
  background: var(--white-soft);
  border: none;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 15rpx rgb(139, 69, 19, 0.15);
  transition: all 0.3s ease;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 10rpx rgb(139, 69, 19, 0.2);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.action-text {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
}



/* 回忆页面样式 */
.memory-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 40rpx 20rpx;
}

/* 顶部按钮 */
.memory-header {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.add-memory-btn {
  background: rgb(255, 255, 255, 0.3);
  border-radius: 20rpx;
  padding: 24rpx 48rpx;
  color: rgb(51, 51, 51);
  font-size: 36rpx;
  font-weight: normal;
  border: none;
  box-shadow: 0 4rpx 16rpx rgb(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.add-memory-btn::after {
  border: none;
}

.add-memory-btn:active {
  background: rgb(255, 255, 255, 0.5);
  transform: scale(0.95);
}

/* 中间内容区域 */
.memory-content {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.memory-box {
  width: 90%;
  max-width: 600rpx;
  height: calc(100vh - 400rpx);
  max-height: 1000rpx;
  margin: 0 auto;
  background: rgb(248, 248, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgb(139, 69, 19, 0.15);
  border: 2rpx solid rgba(139, 69, 19, 0.2);
  overflow: hidden;
}

.memory-scroll {
  width: 100%;
  height: 100%;
  padding: 15rpx;
  box-sizing: border-box;
}

/* 空状态 */
.memory-empty {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-text {
  font-size: 28rpx;
  color: rgb(153, 153, 153);
  text-align: center;
}

/* 回忆项目 */
.memory-item {
  background: rgb(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgb(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.memory-semester {
  display: block;
  font-size: 20rpx;
  color: rgb(131, 220, 238);
  background: rgb(102, 126, 234, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  margin-bottom: 12rpx;
  width: fit-content;
}

.memory-event {
  display: block;
  font-size: 28rpx;
  color: rgb(51, 51, 51);
  margin-bottom: 8rpx;
  font-weight: 500;
}

.memory-mood {
  display: block;
  font-size: 24rpx;
  color: rgb(102, 102, 102);
  margin-bottom: 8rpx;
}

.memory-time {
  display: block;
  font-size: 22rpx;
  color: rgb(153, 153, 153);
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgb(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  max-height: 85vh;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  animation: slideUp 0.3s ease;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  background: linear-gradient(135deg, rgb(102, 126, 234), rgb(118, 75, 162));
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.modal-close {
  font-size: 40rpx;
  color: white;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background: rgb(255, 255, 255, 0.2);
}

.modal-body {
  padding: 30rpx;
  flex: 1;
  overflow-y: auto;
  min-height: 0;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: rgb(51, 51, 51);
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid rgb(224, 224, 224);
  border-radius: 12rpx;
  font-size: 32rpx;
  background: rgb(250, 250, 250);
  box-sizing: border-box;
  text-align: center;
  min-height: 80rpx;
}

.form-input:focus {
  border-color: rgb(102, 126, 234);
  background: white;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid rgb(224, 224, 224);
  border-radius: 12rpx;
  font-size: 32rpx;
  background: rgb(250, 250, 250);
  box-sizing: border-box;
  resize: none;
  text-align: center;
}

.form-textarea:focus {
  border-color: rgb(102, 126, 234);
  background: white;
}

.form-picker {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: rgb(250, 250, 250);
}

.picker-text {
  font-size: 28rpx;
  color: rgb(51, 51, 51);
}

.char-count {
  font-size: 22rpx;
  color: rgb(153, 153, 153);
  text-align: right;
  margin-top: 8rpx;
  display: block;
}

.image-upload {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 照片网格容器 */
.photo-grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  width: 100%;
}

/* 照片网格项 */
.photo-grid-item {
  position: relative;
  width: 100%;
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
}

/* 网格中的照片 */
.grid-photo {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  object-fit: cover;
  border: 2rpx solid rgb(240, 240, 240);
}

/* 照片删除按钮 */
.photo-delete-btn {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  width: 28rpx;
  height: 28rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.delete-icon {
  color: white;
  font-size: 18rpx;
  font-weight: bold;
  line-height: 1;
}

/* 添加照片按钮 */
.photo-add-btn {
  width: 100%;
  aspect-ratio: 1;
  border: 2rpx dashed rgb(204, 204, 204);
  border-radius: 12rpx;
  background: rgb(250, 250, 250);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.photo-add-btn:active {
  background: rgb(240, 240, 240);
  border-color: rgb(180, 180, 180);
}

.add-icon {
  font-size: 48rpx;
  color: rgb(153, 153, 153);
  font-weight: 300;
  line-height: 1;
}

/* 上传进度样式 */
.upload-progress-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.progress-circle {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.progress-bar {
  width: 80%;
  height: 6rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #8BC34A);
  border-radius: 3rpx;
  transition: width 0.3s ease;
}



.upload-tip {
  font-size: 22rpx;
  color: rgb(153, 153, 153);
}

.image-count-tip {
  font-size: 20rpx;
  color: rgb(153, 153, 153);
  margin-left: 10rpx;
}

.modal-footer {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
  border-top: 1rpx solid #eee;
  background: #fafafa;
}

.cancel-btn {
  flex: 1;
  padding: 24rpx;
  border: 2rpx solid rgb(221, 221, 221);
  border-radius: 12rpx;
  background: white;
  color: rgb(102, 102, 102);
  font-size: 28rpx;
}

.cancel-btn::after {
  border: none;
}

.confirm-btn {
  flex: 1;
  padding: 24rpx;
  border: none;
  border-radius: 12rpx;
  background: linear-gradient(135deg, rgb(102, 126, 234), rgb(118, 75, 162));
  color: white;
  font-size: 28rpx;
}

.confirm-btn::after {
  border: none;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 底部文案 */
.memory-footer {
  text-align: center;
}

.memory-slogan {
  font-size: 32rpx;
  color: rgb(142, 68, 173);
  white-space: nowrap;
}

/* 底部 Tab 导航 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: rgb(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid rgb(0, 0, 0, 0.1);
  box-shadow: 0 -4rpx 20rpx rgb(0, 0, 0, 0.1);
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx;
  transition: all 0.3s ease;
  border-radius: 12rpx;
  min-width: 120rpx;
}

