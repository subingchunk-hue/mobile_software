/* memory-detail.wxss */
.page {
  height: 100vh;
  background: var(--retro-white);
  display: flex;
  flex-direction: column;
}

.detail-container {
  flex: 1;
  padding: 40rpx;
  overflow-y: auto;
  padding-bottom: 200rpx; /* 为上传照片功能预留空间 */
  max-height: calc(100vh - 80rpx);
  border-bottom: 2rpx solid rgba(139, 69, 19, 0.2);
}

/* 头部返回按钮 */
.header {
  margin-bottom: 40rpx;
}

.back-btn {
  display: flex;
  align-items: center;
  background: rgba(255, 248, 225, 0.8);
  border: none;
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(139, 69, 19, 0.15);
  transition: all 0.3s ease;
}

.back-btn::after {
  border: none;
}

.back-btn:active {
  background: rgba(255, 248, 225, 0.9);
  transform: scale(0.95);
}

.back-icon {
  font-size: 32rpx;
  color: var(--text-primary);
  margin-right: 12rpx;
}

.back-text {
  font-size: 28rpx;
  color: var(--text-primary);
}

/* 详情内容 */
.detail-content {
  background: rgba(255, 248, 225, 0.95);
  border-radius: 20rpx;
  padding: 60rpx; /* 扩大内边距 */
  margin: 20rpx 0; /* 增加外边距 */
  box-shadow: 0 8rpx 32rpx rgba(139, 69, 19, 0.15);
  border: 2rpx solid rgba(139, 69, 19, 0.2);
  min-height: calc(100vh - 200rpx); /* 响应式高度 */
  max-height: none;
}

.detail-item {
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
}

.detail-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.detail-label {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.detail-value {
  display: block;
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.6;
  word-wrap: break-word;
}

/* 不同类型的值样式 */
.detail-value.semester {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--primary-brown);
}

.detail-value.summary {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.detail-value.description {
  font-size: 28rpx;
  line-height: 1.8;
  color: var(--text-secondary);
}

.detail-value.mood {
  font-size: 28rpx;
  color: var(--retro-orange);
  font-style: italic;
}

.detail-value.time {
  font-size: 26rpx;
  color: var(--text-secondary);
}



/* 图片画廊 - 智能布局 */
.image-gallery {
  display: grid;
  gap: 12rpx;
  margin-top: 16rpx;
  max-width: 100%;
  overflow: hidden;
}

/* 1-2张照片：较大显示 */
.image-gallery[data-count="1"],
.image-gallery[data-count="2"] {
  grid-template-columns: repeat(auto-fit, minmax(200rpx, 1fr));
  max-width: 500rpx;
}

/* 3张照片：一行三个 */
.image-gallery[data-count="3"] {
  grid-template-columns: repeat(3, 1fr);
}

/* 4张照片：2x2布局 */
.image-gallery[data-count="4"] {
  grid-template-columns: repeat(2, 1fr);
}

/* 5张及以上：3x3布局 */
.image-gallery:not([data-count="1"]):not([data-count="2"]):not([data-count="3"]):not([data-count="4"]) {
  grid-template-columns: repeat(3, 1fr);
}

.memory-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  object-fit: cover;
  background: rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 12rpx rgba(139, 69, 19, 0.15);
  transition: transform 0.3s ease;
  overflow: hidden;
}

/* 1-2张照片时的图片容器样式 */
.image-gallery[data-count="1"] .memory-image,
.image-gallery[data-count="2"] .memory-image {
  aspect-ratio: 1;
  max-width: 100%;
}

/* 3张及以上照片时保持正方形 */
.image-gallery[data-count="3"] .memory-image,
.image-gallery[data-count="4"] .memory-image,
.image-gallery:not([data-count="1"]):not([data-count="2"]):not([data-count="3"]):not([data-count="4"]) .memory-image {
  aspect-ratio: 1;
}

.memory-image:active {
  transform: scale(0.95);
}

/* 响应式布局 */
@media (max-width: 750rpx) {
  .image-gallery {
    gap: 10rpx;
  }
}

@media (max-width: 500rpx) {
  .image-gallery {
    gap: 8rpx;
  }
  
  .image-gallery[data-count="1"],
  .image-gallery[data-count="2"] {
    max-width: 90%;
  }
}

