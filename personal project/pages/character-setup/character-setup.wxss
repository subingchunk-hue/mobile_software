/* pages/character-setup/character-setup.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, var(--retro-blue) 0%, var(--retro-blue-light) 100%);
  position: relative;
}/* 生成中遮罩 */
.generating-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(250, 246, 241, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.generating-content {
  text-align: center;
  color: white;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid white;
  border-radius: 50%;
  margin: 0 auto 40rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.generating-text {
  display: block;
  font-size: 36rpx;
  font-weight: normal;
  margin-bottom: 20rpx;
  color: var(--white-soft);
}

.generating-subtitle {
  display: block;
  font-size: 28rpx;
  color: var(--white-soft);
  opacity: 0.9;
}

/* 主要内容 */
.main-content {
  padding: 60rpx 40rpx;
}

.page-header {
  text-align: center;
  margin-bottom: 80rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: normal;
  color: var(--white-soft);
  margin-bottom: 20rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 248, 225, 0.9);
}

/* 选择区域 */
.section {
  margin-bottom: 60rpx;
}

.section-title {
  margin-bottom: 30rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: normal;
  color: var(--white-soft);
}

.options-grid {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.major-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.option-item {
  background: rgba(255, 248, 225, 0.9);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  transition: all 0.3s ease;
  border: 3rpx solid transparent;
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.option-item:active {
  transform: scale(0.95);
}

.option-item.selected {
  background: var(--white-soft);
  border-color: var(--primary-brown);
  box-shadow: 0 8rpx 25rpx rgba(139, 69, 19, 0.3);
  transform: translateY(-4rpx);
}

.option-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
  display: block;
}

.option-name {
  font-size: 28rpx;
  font-weight: normal;
  color: var(--text-primary);
}

/* 确认按钮 */
.confirm-section {
  margin-top: 80rpx;
  text-align: center;
}

.confirm-btn {
  width: 400rpx;
  height: 100rpx;
  background: var(--warm-bg);
  color: var(--dark-brown);
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: normal;
  transition: all 0.3s ease;
}

.confirm-btn.active {
  background: var(--warm-bg);
  color: var(--dark-brown);
  box-shadow: 0 8rpx 25rpx rgba(101, 67, 33, 0.4);
}

.confirm-btn.active:active {
  transform: scale(0.95);
}

.confirm-btn.disabled {
  background: rgba(245, 222, 179, 0.5);
  color: rgba(101, 67, 33, 0.5);
}