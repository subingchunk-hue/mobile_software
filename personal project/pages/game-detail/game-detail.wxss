/* pages/game-detail/game-detail.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

.player-info {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.player-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.player-details {
  display: flex;
  gap: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.final-values {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.values-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.value-item {
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.value-name {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.value-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.achievements {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.achievement-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.achievement-item {
  background: linear-gradient(45deg, #ffd700, #ffed4e);
  color: #333;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.no-achievements {
  color: #999;
  font-style: italic;
  text-align: center;
  padding: 20rpx;
}

.timeline {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.semester-section {
  margin-bottom: 30rpx;
}

.semester-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #e9ecef;
}

.choice-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
  border-left: 4rpx solid #667eea;
}

.choice-event {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.choice-text {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.choice-effects {
  font-size: 22rpx;
  color: #28a745;
  font-weight: bold;
}

.no-choices {
  color: #999;
  font-style: italic;
  text-align: center;
  padding: 20rpx;
}

.back-button {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  margin: 20rpx auto;
  display: block;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

.back-button:active {
  transform: scale(0.98);
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .values-grid {
    grid-template-columns: 1fr;
  }
  
  .player-details {
    flex-direction: column;
    gap: 10rpx;
  }
}