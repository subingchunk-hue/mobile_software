/* pages/photo-album/photo-album.wxss */

.page {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--retro-blue) 0%, var(--retro-blue-light) 100%);
  padding: 40rpx 30rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 相册容器 */
.album-container {
  flex: 1;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  background: var(--white-soft);
  border-radius: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(139, 69, 19, 0.1);
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: var(--text-primary);
  margin-bottom: 20rpx;
  font-weight: 500;
}

.empty-tip {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 相册分组 */
.album-groups {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.album-group {
  background: var(--white-soft);
  border-radius: 30rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(139, 69, 19, 0.1);
}

/* 分组标题 */
.group-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.group-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.4;
  margin-right: 20rpx;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.memory-details {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  border-left: 4rpx solid var(--primary-blue);
}

.memory-description {
  display: block;
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.5;
  margin-bottom: 12rpx;
  word-wrap: break-word;
  word-break: break-all;
  overflow-wrap: break-word;
  white-space: pre-wrap;
}

.memory-mood {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.memory-time {
  display: block;
  font-size: 24rpx;
  color: var(--text-light);
}

.photo-count {
  font-size: 24rpx;
  color: var(--text-secondary);
  background: rgba(139, 69, 19, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 导出按钮 */
.export-btn {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
}

.export-btn:active {
  transform: scale(0.9);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.4);
}

.export-icon {
  font-size: 28rpx;
  color: white;
}

/* 照片网格 - 智能布局 */
.photo-grid {
  display: grid;
  gap: 12rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  margin: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(252, 178, 125, 0.35);
}

/* 1-2张照片：较大显示 */
.photo-grid[data-count="1"],
.photo-grid[data-count="2"] {
  grid-template-columns: repeat(auto-fit, minmax(200rpx, 1fr));
  max-width: 500rpx;
  margin: 20rpx auto;
}

/* 3张照片：一行三个 */
.photo-grid[data-count="3"] {
  grid-template-columns: repeat(3, 1fr);
}

/* 4张照片：2x2布局 */
.photo-grid[data-count="4"] {
  grid-template-columns: repeat(2, 1fr);
}

/* 5张及以上：3x3布局 */
.photo-grid:not([data-count="1"]):not([data-count="2"]):not([data-count="3"]):not([data-count="4"]) {
  grid-template-columns: repeat(3, 1fr);
}

.photo-item {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  object-fit: cover;
  background: rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 12rpx rgba(139, 69, 19, 0.15);
  transition: transform 0.3s ease;
}

/* 1-2张照片时的图片容器样式 */
.photo-grid[data-count="1"] .photo-item,
.photo-grid[data-count="2"] .photo-item {
  aspect-ratio: 1;
  max-width: 100%;
}

/* 3张及以上照片时保持正方形 */
.photo-grid[data-count="3"] .photo-item,
.photo-grid[data-count="4"] .photo-item,
.photo-grid:not([data-count="1"]):not([data-count="2"]):not([data-count="3"]):not([data-count="4"]) .photo-item {
  aspect-ratio: 1;
}

.photo-item:active {
  transform: scale(0.95);
}

.photo-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  object-fit: cover;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .photo-grid {
    gap: 10rpx;
    margin: 15rpx;
    padding: 15rpx;
  }
}

@media (max-width: 500rpx) {
  .page {
    padding: 30rpx 20rpx;
  }
  
  .album-group {
    padding: 30rpx;
  }
  
  .photo-grid {
    gap: 8rpx;
    margin: 10rpx;
    padding: 12rpx;
  }
  
  .photo-grid[data-count="1"],
  .photo-grid[data-count="2"] {
    max-width: 90%;
  }
}