/* pages/photo-album/photo-album.wxss */

.page {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--retro-blue) 0%, var(--retro-blue-light) 100%);
  padding: 40rpx 30rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 相册容器 */
.album-container {
  flex: 1;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  background: var(--white-soft);
  border-radius: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(139, 69, 19, 0.1);
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: var(--text-primary);
  margin-bottom: 20rpx;
  font-weight: 500;
}

.empty-tip {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 相册分组 */
.album-groups {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.album-group {
  background: var(--white-soft);
  border-radius: 30rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(139, 69, 19, 0.1);
}

/* 分组标题 */
.group-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.group-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.4;
  margin-right: 20rpx;
}

.memory-details {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  border-left: 4rpx solid var(--primary-blue);
}

.memory-description {
  display: block;
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.memory-mood {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.memory-time {
  display: block;
  font-size: 24rpx;
  color: var(--text-light);
}

.photo-count {
  font-size: 24rpx;
  color: var(--text-secondary);
  background: rgba(139, 69, 19, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 照片网格 */
.photo-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.photo-item {
  aspect-ratio: 1;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(139, 69, 19, 0.15);
  transition: transform 0.3s ease;
}

.photo-item:active {
  transform: scale(0.95);
}

.photo-image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .photo-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 500rpx) {
  .page {
    padding: 30rpx 20rpx;
  }
  
  .album-group {
    padding: 30rpx;
  }
  
  .photo-grid {
    gap: 15rpx;
  }
}