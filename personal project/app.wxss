/* 全局样式 - 暖色调复古风格 */

/* 全局CSS变量 */
page {
  /* 主色调 - 用户指定配色 */
  --retro-blue: rgba(151, 214, 239, 0.84);    /* 复古蓝 - 页面背景 */
  --retro-blue-light: rgb(176, 224, 230); /* 浅复古蓝 */
  --retro-yellow: rgba(240, 236, 7, 0.27);  /* 复古黄 - 滑动框 */
  --potato-color: rgb(245, 210, 163);  /* 土豆色 - 个人主页组件 */
  --warm-bg: rgb(245, 222, 179);       /* 温暖背景色 - 按键 */
  
  /* 文本颜色 */
  --dark-brown: rgb(101, 67, 33);    /* 深棕色文字 */
  --text-primary: rgb(47, 79, 79);  /* 深灰绿 */
  --text-secondary: rgb(105, 105, 105); /* 中灰 */
  --text-light: rgb(160, 160, 160);    /* 浅灰 */
  
  /* 背景色 */
  --bg-soft: rgb(255, 248, 220);       /* 柔和背景 */
  --white-soft: rgb(255, 250, 240);    /* 柔和白色 */
}

/* 全局字体样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  color: var(--text-primary);
  background-color: var(--background-warm);
}

/* 通用按钮样式 */
.btn-warm {
  background: linear-gradient(135deg, var(--primary-warm) 0%, var(--primary-brown) 100%);
  color: var(--white-soft);
  border: none;
  border-radius: 25rpx;
  box-shadow: 0 4rpx 12rpx rgb(139, 69, 19, 0.2);
  transition: all 0.3s ease;
}

.btn-warm:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgb(139, 69, 19, 0.3);
}

.btn-retro {
  background: linear-gradient(135deg, var(--retro-pink) 0%, var(--retro-blue) 100%);
  color: var(--text-primary);
  border: none;
  border-radius: 25rpx;
  box-shadow: 0 4rpx 12rpx rgb(212, 165, 165, 0.3);
  transition: all 0.3s ease;
}

.btn-retro:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgb(212, 165, 165, 0.4);
}